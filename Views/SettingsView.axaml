<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TagForge.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:DataType="vm:SettingsViewModel"
             x:Class="TagForge.Views.SettingsView">
  
  <ScrollViewer Margin="30">
      <StackPanel Spacing="30">
          
          <TextBlock Text="Settings" FontSize="28" FontWeight="Bold"/>

          <!-- Appearance Section Removed as per request -->
          
          <!-- Personas Management -->

          <!-- Personas Management -->
          <StackPanel Spacing="10">
               <TextBlock Text="Personas &amp; System Prompts" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource AccentBrush}"/>
               <Border Classes="card" Padding="0">
                   <Grid ColumnDefinitions="300, 1, *">
                       
                       <!-- Sidebar List -->
                       <Grid Grid.Column="0" RowDefinitions="*, Auto">
                           <ListBox ItemsSource="{Binding Personas}" SelectedItem="{Binding SelectedPersonaToEdit}" Height="300" Background="Transparent">
                               <ListBox.ItemTemplate>
                                   <DataTemplate>
                                       <TextBlock Text="{Binding Name}" Padding="5" TextWrapping="Wrap"/>
                                   </DataTemplate>
                               </ListBox.ItemTemplate>
                           </ListBox>
                           <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="5" Margin="10">
                               <Button Content="Add" Command="{Binding AddPersonaCommand}" Classes="ghost"/>
                               <Button Content="Delete" Command="{Binding DeletePersonaCommand}" Classes="ghost"/>
                           </StackPanel>
                       </Grid>
                       
                       <Rectangle Grid.Column="1" Fill="#333" Width="1"/>
                       
                       <!-- Edit Details -->
                       <Grid Grid.Column="2" Margin="20" RowDefinitions="Auto, Auto, *, Auto">
                           <TextBlock Text="Name" Foreground="#888" FontSize="12" Margin="0,0,0,5"/>
                           <TextBox Grid.Row="1" Text="{Binding SelectedPersonaToEdit.Name}" Margin="0,0,0,15"/>
                           
                           <TextBlock Grid.Row="2" Text="System Prompt" Foreground="#888" FontSize="12" Margin="0,0,0,5"/>
                           <TextBox Grid.Row="2" Text="{Binding SelectedPersonaToEdit.SystemPrompt}" 
                                    AcceptsReturn="True" TextWrapping="Wrap" Height="150"
                                    VerticalAlignment="Top" Margin="0,20,0,0"/>

                           <Button Grid.Row="3" Content="Save Changes" Command="{Binding SavePersonasCommand}" 
                                   Classes="accent" HorizontalAlignment="Right" Margin="0,15,0,0"/>
                       </Grid>
                   </Grid>
               </Border>
          </StackPanel>

          <!-- About Section -->
          <StackPanel Spacing="10">
               <TextBlock Text="About" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource AccentBrush}"/>
               <Border Classes="card">
                   <StackPanel Spacing="15">
                       <StackPanel Orientation="Horizontal" Spacing="15">
                           <Image Width="64" Height="64" Source="/Assets/Logo.ico"/>
                           <StackPanel VerticalAlignment="Center">
                               <TextBlock Text="TagForge" FontSize="20" FontWeight="Bold"/>
                               <TextBlock Text="{Binding AppVersion}" Foreground="#AAA"/>
                           </StackPanel>
                       </StackPanel>
                       <TextBlock Text="Advanced AI tagging and prompt generation studio." Foreground="#CCC"/>
                       
                       <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">

                           <Button Command="{Binding OpenUrlCommand}" CommandParameter="https://github.com/SiliconeShojo/TagForge" Classes="ghost">
                               <StackPanel Orientation="Horizontal" Spacing="8">
                                   <PathIcon Data="M12,2A10,10 0 0,0 2,12C2,16.42 4.87,20.17 8.84,21.5C9.34,21.58 9.5,21.27 9.5,21C9.5,20.77 9.5,20.14 9.5,19.31C6.73,19.91 6.14,17.97 6.14,17.97C5.68,16.81 5.03,16.5 5.03,16.5C4.12,15.88 5.1,15.9 5.1,15.9C6.1,15.97 6.63,16.93 6.63,16.93C7.5,18.45 8.97,18 9.54,17.76C9.63,17.11 9.89,16.67 10.17,16.42C7.95,16.17 5.62,15.31 5.62,11.5C5.62,10.39 6,9.5 6.65,8.79C6.55,8.54 6.2,7.5 6.75,6.15C6.75,6.15 7.59,5.88 9.5,7.17C10.29,6.95 11.15,6.84 12,6.84C12.85,6.84 13.71,6.95 14.5,7.17C16.41,5.88 17.25,6.15 17.25,6.15C17.8,7.5 17.45,8.54 17.35,8.79C18,9.5 18.38,10.39 18.38,11.5C18.38,15.32 16.04,16.16 13.81,16.41C14.17,16.72 14.5,17.33 14.5,18.26C14.5,19.6 14.5,20.68 14.5,21C14.5,21.27 14.66,21.59 15.17,21.5C19.14,20.16 22,16.42 22,12A10,10 0 0,0 12,2Z" Width="16" Height="16"/>
                                   <TextBlock Text="GitHub Repository" VerticalAlignment="Center"/>
                               </StackPanel>
                           </Button>
                       </StackPanel>
                   </StackPanel>
               </Border>
          </StackPanel>

      </StackPanel>
  </ScrollViewer>
</UserControl>
